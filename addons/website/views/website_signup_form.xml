    <template id="website_signup" inherit_id="auth_signup.signup">
        <xpath expr="//section" position="replace">
            <section class="s_website_form pt40 pb40 o_signup oe_unremovable" data-vcss="001" data-snippet="s_website_form" data-name="Form" t-ignore="True">
                <div class="container" style="max-width: 500px;">
                    <form class="oe_signup_form" action="/web/signup" data-model_name="res.users" enctype="multipart/form-data" data-success-mode="redirect" data-mark="*" data-success-page="/my">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="s_website_form_rows row s_col_no_bgcolor">

                            <t t-call="website.website_signup_form_field">
                                <t t-set="only_passwords" t-value="bool(token and not invalid_token)"/>
                            </t>

                            <p class="alert alert-danger" t-if="error" role="alert">
                                <t t-esc="error"/>
                            </p>
                        </div>
                        <input type="hidden" name="redirect" t-att-value="redirect"/>
                        <input type="hidden" name="token" t-att-value="token"/>
                        <div class="text-center s_website_form_submit oe_login_buttons oe_unremovable d-grid pt-3">
                            <span id="s_website_form_result"/>
                            <button type="submit" class="btn btn-primary s_website_form_send o_not_editable"> Sign up</button>
                            <a t-attf-href="/web/login?{{ keep_query() }}" class="btn btn-link btn-sm o_not_editable" role="button">Already have an account?</a>
                            <div class="o_login_auth"/>
                        </div>
                    </form>
                </div>
            </section>
        </xpath>
    </template>

    <template id="website_signup_form_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='WebsiteFormEditor']//we-row//we-select" position="attributes">
            <attribute name="data-name" add="signup_form_opt" />
        </xpath>
        <xpath expr="//div[@data-js='AddFieldForm']" position="attributes">
            <attribute name="data-exclude" add=".o_signup" />
        </xpath>
        <xpath expr="//div[@data-js='WebsiteFieldEditor']//we-select" position="replace">
            <we-select data-name="type_opt" string="Type" data-no-preview="true">
                <we-title data-name="signup_form_custom_opt">Custom Field</we-title>
                <we-button data-name="signup_form_custom_opt" data-custom-field="char">Text</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="text">Long Text</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="email">Email</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="tel">Telephone</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="url">Url</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="integer">Number</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="float">Decimal Number</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="boolean">Checkbox</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="one2many">Multiple Checkboxes</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="selection">Radio Buttons</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="many2one">Selection</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="date">Date</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="datetime">Date &amp; Time</we-button>
                <we-button data-name="signup_form_custom_opt" data-custom-field="binary">File Upload</we-button>
            </we-select>
        </xpath>
    </template> 

</odoo>
