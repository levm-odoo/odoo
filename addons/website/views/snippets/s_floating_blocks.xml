    <field name="bundle">web.assets_frontend</field>
    <field name="path">website/static/src/snippets/s_floating_blocks/000.scss</field>
</record>

<record id="website.s_floating_blocks_000_js" model="ir.asset">
    <field name="name">Floating Blocks 000 JS</field>
    <field name="bundle">web.assets_frontend</field>
    <field name="path">website/static/src/snippets/s_floating_blocks/000.js</field>
</record>

</odoo>
