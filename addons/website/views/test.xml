<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="custom_header_layout" inherit_id="website.layout" active="True">
        <xpath expr="//header" position="replace">
            <header id="custom-header" style="background-color: lightgreen;">
                <div class="container">
                    <t t-call="website.nav_component"/>
                </div>
            </header>
        </xpath>
    </template>

    <template id="nav_component" name="template_name">
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="/">My Unique Brand</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/unique">Unique Menu</a>
                    </li>
                </ul>
            </div>
        </nav>
    </template>

    <template id="template_header_opt" inherit_id="website.snippet_options" name="Header Template - Option">
        <xpath expr="//we-select[@data-variable='header-template']" position="after">
            <we-button string="airproof" title="airproof"
                data-customize-website-views="website_airproof.header"
                data-customize-website-variable="'airproof'" />
        </xpath>
    </template>

    <template id="custom_footer_layout" inherit_id="website.layout" active="True">
        <xpath expr="//footer" position="replace">
            <footer id="custom-footer" style="background-color: lightgreen;">
                <div class="container py-4">
                    <div class="row">
                        <div class="col-md-4">
                            <h4>About Us</h4>
                            <p>
                                We are a dedicated team providing the best services to our customers. 
                                Stay connected for more updates.
                            </p>
                        </div>
                        <div class="col-md-4">
                            <h4>Quick Links</h4>
                            <ul class="list-unstyled">
                                <li><a href="/">Home</a></li>
                                <li><a href="/about">About Us</a></li>
                                <li><a href="/services">Services</a></li>
                                <li><a href="/contact">Contact</a></li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h4>Contact Us</h4>
                            <address>
                                123 Main Street, City<br/>
                                Email: info@example.com<br/>
                                Phone: +1 234 567 890
                            </address>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <p>Copy 2024 Your Company. All Rights Reserved.</p>
                    </div>
                </div>
            </footer>
        </xpath>
    </template>

    <template id="template_footer_opt" inherit_id="website.snippet_options" name="Footer Template - Option">
        <xpath expr="//we-select[@data-variable='footer-effect']" position="after">
            <we-button string="airproof" title="airproof"
                data-customize-website-views="website_airproof.header"
                data-customize-website-variable="'airproof'" />
        </xpath>
    </template>

</odoo>
