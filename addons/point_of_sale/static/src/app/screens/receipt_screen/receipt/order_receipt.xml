<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.OrderReceipt">
        <div class="pos-receipt table-responsive" t-att-class="{'pos-receipt-preview-container' : previewMode}" 
            t-attf-class="pos-receipt-#{this.layout}-layout" t-att-style="getReceiptStyle()">
            <img t-if="order.config.receipt_bg !== 'Blank' and bgImageUrl" t-att-src="bgImageUrl" class="pos-receipt-background-image" />
            <t t-set="showTaxGroupLabels" t-value="doesAnyOrderlineHaveTaxLabel()"/>
            <ReceiptHeader order="order" previewMode="previewMode"/>
            <!-- Orderlines -->
            <table t-att-class="receiptClasses.table">
                <thead t-att-class="receiptClasses.head">
                    <tr>
                        <th t-foreach="headerData" t-as="headerName" t-key="headerName_index" t-esc="headerName.value" t-att-class="headerName.key" scope="col"/>
                    </tr>
                </thead>
                <tbody t-att-class="receiptClasses.body" class="order-container">
                    <t t-foreach="order.lines" t-as="line" t-key="line.id">
                        <tr class="orderline">
                            <td t-foreach="this.getLineInfo(line, line_index)" t-as="lineInfo" t-key="lineInfo_index" t-att-class="lineInfo.key">
                                <div t-esc="lineInfo.value"/>
                                <t t-if="lineInfo.other" >
                                    <ul class="info-list d-flex flex-column">
                                        <li t-foreach="lineInfo.other" t-as="info" t-key="info_index" t-att-class="info.key">
                                            <i t-if="info.iclass" t-attf-class="fa #{info.iclass} me-1"/>
                                            <t t-out="info.value" />
                                        </li>
                                        <t t-slot="default" />
                                    </ul>
                                </t>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>

            <t t-if="!props.basic_receipt">
                <t t-set="taxTotals" t-value="order.taxTotals"/>

                <!-- Total -->
                <div t-if="isDefaultLayout" class="text-center">--------------------------------</div>
                <div class="pos-receipt-total-container">
                    <div t-if="!isDefaultLayout" class="pos-receipt-total-qty total-qty">
                        <span class="label-total-qty">Total Qty </span>
                        <span t-esc="order.totalQuantity" class="ps-2"/>
                    </div>
                    <div class="pos-receipt-amount receipt-total">
                        <span class="label-total">Sub Total</span>
                        <span t-esc="formatCurrency(taxTotals.order_sign * taxTotals.order_total)" class="pos-receipt-right-align"/>
                    </div>
                    <t t-if="'order_rounding' in taxTotals">
                        <div class="pos-receipt-amount receipt-rounding">
                            <span class="label-rounding">Rounding</span>
                            <span t-esc='formatCurrency(taxTotals.order_sign * taxTotals.order_rounding)' class="pos-receipt-right-align"/>
                        </div>
                        <div class="pos-receipt-amount receipt-to-pay">
                            To Pay
                            <span t-esc='formatCurrency(taxTotals.order_sign * taxTotals.order_to_pay)' class="pos-receipt-right-align"/>
                        </div>
                    </t>
                </div>

                <!-- Payment Lines -->
                <div t-if="paymentLines.length" class="pos-receipt-total-container">
                    <div t-if="!isDefaultLayout" class="pos-receipt-total-qty" />
                    <div class="pos-receipt-amount" >
                        <div class="paymentlines text-start" t-foreach="paymentLines" t-as="line" t-key="line_index">
                            <span t-esc="line.payment_method_id.name" />
                            <span t-esc="formatCurrency(line.getAmount())" class="pos-receipt-right-align"/>
                        </div>

                        <div t-if="'order_change' in taxTotals" class="pos-receipt-amount receipt-change">
                            <span class="label-change">CHANGE</span>
                            <span t-esc="formatCurrency(taxTotals.order_sign * order.amount_return)" class="pos-receipt-right-align"/>
                        </div>

                        <!-- Extra Payment Info -->
                        <t t-set="totalDiscount" t-value="order.getTotalDiscount()" />
                        <t t-if="totalDiscount">
                            <div class="text-center">
                                <span class="label-discount">Discounts</span>
                                <span t-esc="formatCurrency(totalDiscount)" class="pos-receipt-right-align"/>
                            </div>
                        </t>
                    </div>
                </div>

                <!-- Tax Details -->
                <div t-if="taxTotals and taxTotals.has_tax_groups" class="pos-receipt-taxes">
                    <div t-if="isDefaultLayout" class="text-center">--------------------------------</div>
                    <t t-foreach="taxTotals.subtotals" t-as="subtotal" t-key="subtotal.name">
                        <div t-if="isDefaultLayout" class="d-flex">
                            <span t-if="showTaxGroupLabels" class="me-2" style="visibility: hidden;">A</span>
                            <span class="fw-bolder text-nowrap mw-100" t-out="subtotal.name"/>
                            <span t-esc="formatCurrency(subtotal.base_amount_currency)" class="ms-auto"/>
                        </div>

                        <t t-if="isDefaultLayout">
                            <div t-foreach="subtotal.tax_groups" t-as="tax_group" t-key="tax_group.id" class="d-flex">
                                <t t-if="showTaxGroupLabels">
                                    <span t-if="tax_group.group_label" t-out="tax_group.group_label" class="me-2"/>
                                    <span t-else="" class="me-2" style="visibility: hidden;">A</span>
                                </t>
                                <span>
                                    <span t-esc="tax_group.group_name"/>
                                    <t t-if="!taxTotals.same_tax_base">
                                        on
                                        <span t-esc="formatCurrency(tax_group.base_amount_currency)"/>
                                    </t>
                                </span>
                                <span t-esc="formatCurrency(tax_group.tax_amount_currency)" class="ms-auto"/>
                            </div>
                        </t>
                        <table t-else="" class="table border-dark table-borderless tax-table">
                            <thead>
                                <tr>
                                    <th scope="col" class="pb-0 text-center">Tax</th>
                                    <th scope="col" class="pb-0 text-center">Amount</th>
                                    <th scope="col" class="pb-0 text-center">Base</th>
                                    <th scope="col" class="pb-0 text-center">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="subtotal.tax_groups" t-as="tax_group" t-key="tax_group.id">
                                    <td t-out="tax_group.group_name" class="py-0 text-center"/>
                                    <td t-out="formatCurrency(tax_group.tax_amount_currency)" class="py-0 text-center"/>
                                    <td t-out="formatCurrency(subtotal.base_amount_currency)" class="py-0 text-center"/>
                                    <td t-out="formatCurrency(taxTotals.order_total)" class="py-0 text-center"/>
                                </tr>
                            </tbody>
                        </table>
                    </t>
                </div>

                <div class="before-footer" />

                <t t-set="useQrCode" t-value="this.qrCode" />
                <div t-if="useQrCode">
                    <br/>
                    <div class="pos-receipt-order-data mb-2">
                        Need an invoice for your purchase ?
                    </div>
                </div>

                <div t-if="['qr_code', 'qr_code_and_url'].includes(this.header.company.point_of_sale_ticket_portal_url_display_mode) and useQrCode" class="mb-2">
                    <img id="posqrcode" t-att-src="useQrCode" class="pos-receipt-logo"/>
                </div>

                <div t-if="useQrCode">
                    <div class="pos-receipt-order-data">
                        Unique Code: <t t-esc="order.ticket_code"/>
                    </div>
                </div>

                <div t-if="['url', 'qr_code_and_url'].includes(this.header.company.point_of_sale_ticket_portal_url_display_mode) and useQrCode">
                    <div class="pos-receipt-order-data">
                        Portal URL: <t t-esc="getPortalURL()"/>
                    </div>
                </div>
            </t>

            <!-- Footer -->
           <div t-if="this.order.config.receipt_footer" class="pos-receipt-center-align" style="white-space:pre-line">
                <br/>
                <t t-out="this.footerMarkup" />
            </div>

            <div class="after-footer">
                <t t-foreach="paymentLines" t-as="line" t-key="line_index">
                    <t t-if="line.ticket">
                        <br />
                        <div class="pos-payment-terminal-receipt">
                            <pre t-esc="line.ticket" />
                        </div>
                    </t>
                </t>
            </div>

            <br/>
            <t t-if="order.shipping_date">
                <div class="pos-receipt-order-data">
                    Expected delivery:
                    <div><t t-esc="order.formatDateOrTime('shipping_date', 'date')" /></div>
                </div>
            </t>

            <br/>
            <div class="pos-receipt-order-data">
                <p>Powered by Odoo</p>
                <div t-esc="order.pos_reference" />
                <div id="order-date" t-esc="order.formatDateOrTime('date_order')" />
            </div>

        </div>
    </t>
</templates>
