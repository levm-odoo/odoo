<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">


<t t-name="mysterious_egg.SnippetViewer">
    <div class="row g-0 o_snippets_preview_row">
        <div class="col-lg-6" t-foreach="this.getSnippetColumns()" t-as="snippetsColumn" t-key="snippetsColumn_index">
            <t t-foreach="snippetsColumn" t-as="snippet" t-key="snippet.id">
                <div class="o_snippet_preview_wrap position-relative" t-att-class="snippet.isCustom ? ' mb-0' : ''" t-on-click="() => this.onClick(snippet)" t-out="this.getContent(snippet.content)"/>
                <div t-if="snippet.isCustom" class="d-grid mt-2 mx-5 gap-2 d-md-flex justify-content-md-end o_custom_snippet_edit">
                    <span class="w-100" t-esc="snippet.title"></span>
                    <button class="btn fa fa-pencil me-md-2"></button>
                    <button class="btn fa fa-trash"></button>
                </div>
            </t>
        </div>
    </div>
</t>

</templates>
