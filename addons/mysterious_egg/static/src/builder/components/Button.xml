<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="mysterious_egg.Button">
    <button type="button" class="btn btn-primary"
        t-att-class="{'active': this.isActive?.(props.id, this.activeState)}"
        t-att-title="props.title"
        t-on-click="() => props.onClick ? props.onClick() : onClick?.(props.id)"
        t-on-mouseenter="() => this.onMouseenter?.(props.id)"
        t-on-mouseleave="() => this.onMouseleave?.(props.id)">
        <img t-if="props.iconImg" t-att-src="props.iconImg" t-att-alt="props.iconImgAlt"/>
        <t t-if="props.label"  t-out="props.label"/>
    </button>
</t>

</templates>
