<odoo>
    <template inherit_id="account.report_payment_receipt_document" id="report_payment_receipt_document">
        <xpath expr="//table" position="before">
            <t t-if="o.l10n_account_wth_line_ids">
                <table id="l10n_account_withholding" class="table table-borderless border-bottom pt-2 mb-5">
                    <thead>
                        <tr>
                            <th><span>Tax</span></th>
                            <th><span>Withholding number</span></th>
                            <th class="text-end"><span>Base</span></th>
                            <th class="text-end"><span>Amount</span></th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.l10n_account_wth_line_ids" t-as="line">
                            <t t-set="withholding_base" t-value="o.move_id.line_ids.filtered(lambda x: line.tax_line_id.id in x.tax_ids.ids)"/>
                            <tr>
                                <td>
                                    <span t-field='line.tax_line_id.name'/>
                                </td>
                                <td>
                                    <span t-out="line.name.replace('WH Tax: ', '')"/>
                                </td>
                                <td class="text-end">
                                    <span t-out="abs(withholding_base.amount_currency)" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                </td>
                                <td class="text-end">
                                    <span t-out="abs(line.amount_currency)" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <div class="oe_structure"></div>
            </t>
        </xpath>
    </template>
</odoo>
