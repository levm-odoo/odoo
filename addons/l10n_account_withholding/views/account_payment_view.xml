<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.payment.form.inherited</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <notebook name="payment_notebook" position="inside">
                <page string="Withholding" invisible="not l10n_account_wth_line_ids">
                    <group>
                        <field name="l10n_account_wth_line_ids" nolabel="1" colspan="2" readonly="True">
                            <list>
                                <field name="move_name" column_invisible="True"/>
                                <field name="name" string="Sequence Number" required="1" width="92px"/>
                                <field name="tax_line_id" string="Tax" width="92px"/>
                                <field name="currency_id" column_invisible="1"/>  <!-- Required to display the currency and sum of the amount_currency field -->
                                <field name="amount_currency" string="Withheld Amount" sum="Total Withheld Amount"/>
                            </list>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
