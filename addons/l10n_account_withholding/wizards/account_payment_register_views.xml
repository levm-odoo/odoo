<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_register_form" model="ir.ui.view">
        <field name="name">account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <group name="group1" position="inside">
                <field name="l10n_account_wth_withhold_tax" invisible="not l10n_account_wth_display_withholding"/>
                <field name="l10n_account_wth_payment_move_amount_total" invisible="1"/>  <!-- Without it, it would be recomputed using _compute_from_lines which causes unwanted behaviors -->
            </group>
            <footer position="before">
                <!-- Hide for argentina, it should be handled by their own module -->
                <notebook name="payment_register_notebook" colspan="2" invisible="not l10n_account_wth_withhold_tax or not l10n_account_wth_display_withholding">
                    <page name="withholding_page" string="Withholding">
                        <group>
                            <field name="l10n_account_wth_line_ids" nolabel="1" colspan="2">
                                <list editable="bottom">
                                    <field name="currency_id" column_invisible="True"/>  <!-- Required for the monetary field. -->
                                    <field name="custom_user_currency_id" column_invisible="True"/>  <!-- Required when changing currency on a custom amount. -->
                                    <field name="custom_user_amount" column_invisible="True"/>  <!-- Required when changing currency on a custom amount. -->
                                    <field name="full_base_amount" column_invisible="True"/>  <!-- Required when changing currency on a default amount. -->
                                    <field name="full_base_amount_in_currency" column_invisible="True"/>  <!-- Required when changing currency on a default amount. -->
                                    <field name="name" readonly="withholding_sequence_id" column_invisible="parent.l10n_account_wth_hide_number_col" width="92px"/>
                                    <field name="base_amount"/>
                                    <field name="tax_id" options="{'no_open': True, 'no_create': True}" width="92px"/>  <!-- Tax names tend to be short -->
                                    <field name="analytic_distribution" widget="analytic_distribution" groups="analytic.group_analytic_accounting"/>
                                    <field name="amount" sum="Total Withheld Amount"/>
                                </list>
                            </field>
                        </group>
                        <group>
                            <group>
                                <field name="l10n_account_wth_outstanding_account_id"
                                       required="l10n_account_wth_withhold_tax and l10n_account_wth_line_ids and not l10n_account_wth_payment_account_id"
                                       invisible="(not l10n_account_wth_line_ids) or l10n_account_wth_payment_account_id or not l10n_account_wth_display_withholding"/>
                            </group>
                            <group>
                                <field name="l10n_account_wth_net_amount"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </footer>
        </field>
    </record>
</odoo>
