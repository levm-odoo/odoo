<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form_inherit_expense_stripe_issuing" model="ir.ui.view">
        <field name="name">hr.employee.view.form.expense_stripe_issuing</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']/group" position="inside">
                <group name="stripe_issuing" string="Stripe Issuing">
                    <field name="stripe_cardholder_ident"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
