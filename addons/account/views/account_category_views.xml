<odoo>
    <record id="view_account_category_list" model="ir.ui.view">
        <field name="name">account.category.list</field>
        <field name="model">account.category</field>
        <field name="arch" type="xml">
            <list editable="bottom" open_form_view="True">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="scope"/>
                <field name="prefix"/>
            </list>
        </field>
    </record>

    <record id="view_account_category_form" model="ir.ui.view">
        <field name="name">account.category.form</field>
        <field name="model">account.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="scope"/>
                            <field name="parent_id"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field name="prefix"/>
                            <field name="account_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_account_category_list" model="ir.actions.act_window">
        <field name="name">Account Categories</field>
        <field name="res_model">account.category</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_account_category_list"/>
    </record>

</odoo>
