<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="ProductCatalogSaleOrderLine"
       t-inherit="product.ProductCatalogOrderLine"
       t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_product_catalog_quantity')]" position="after">
            <div t-elif="!isInOrder() and props.last_invoice_date">
                <span class="text-muted">
                    <i class="fa fa-clock-o"></i> Last:
                    <t t-esc="props.last_invoice_date"/>
                </span>
            </div>
        </xpath>
    </t>
</templates>
