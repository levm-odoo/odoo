<?xml version="1.0"?>
<odoo>
    <record id="estate_property_offer_1" model="estate.property.offers">
        <field name="partner_id" ref="base.res_partner_12" />
        <field name="property_id" ref="training.demo_property_1" />
        <field name="price">10000</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="datetime.now() + relativedelta(days=14)"></field>
    </record>

    <record id="estate_property_offer_2" model="estate.property.offers">
        <field name="partner_id" ref="base.res_partner_12" />
        <field name="property_id" ref="training.demo_property_1" />
        <field name="price">1500000</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="datetime.now() + relativedelta(days=14)"></field>
    </record>

    <record id="estate_property_offer_3" model="estate.property.offers" >
        <field name="partner_id" ref="base.res_partner_2" />
        <field name="property_id" ref="training.demo_property_1" />
        <field name="price">1500001</field>
        <field name="validity">14</field>
        <field name="date_deadline" eval="datetime.now() + relativedelta(days=14)"></field>
    </record>

    <function model="estate.property.offers" name="action_accepted">
        <value eval="[ref('training.estate_property_offer_3')]"/>
    </function>

    <!-- reject rest offers -->
    <function model="estate.property.offers" name="action_refused">
        <value eval="[ref('training.estate_property_offer_2'), ref('training.estate_property_offer_1')]"/>
    </function>

</odoo>
