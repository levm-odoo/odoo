        <t t-set="record" t-value="data['_record']._set_tz_context()"/>
        <div t-if="is_sample" class="h5 o_ribbon_right bg-primary text-uppercase z-1">Sample</div>
        <!-- p-0 makes it misaligned with the rest of the content -->
        <div class="container p-0">
            <div class="o_cc o_cc5 position-absolute start-0 top-0 d-flex flex-column justify-content-between w-100 h-100 p-5 bg-transparent">
                <div class="d-flex flex-column flex-md-row gap-md-5 justify-content-between align-items-top mb-3 mb-md-0">
                    <div class="flex-grow-1 order-1 order-md-0">
                        <h2 t-field="record.name"/>
                        <p class="lead" t-field="record.subtitle"/>
                    </div>
                    <div class="order-0">
                        <p class="h3-fs text-nowrap" t-out="record.date_begin"
                            t-options="{'widget': 'datetime', 'date_only': 'true', 'format': 'long', 'tz_name': record.date_tz}"/>
