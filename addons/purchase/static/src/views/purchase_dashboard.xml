<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="purchase.PurchaseDashboard">
        <div class="o_purchase_dashboard container-fluid py-4 border-bottom bg-view">
            <div class="row justify-content-between gap-3 gap-lg-0">
                <div class="col-12 col-lg-5 col-xl-5 col-xxl-8 flex-grow-1 flex-lg-grow-0 flex-shrink-0">
                    <div class="grid gap-4">
                        <div class="g-col-2 g-col-sm-2 d-flex align-items-center py-2 justify-content-end text-end justify-content-lg-start text-lg-start text-break fw-bold">
                            All
                        </div>
                        <div class="g-col-10 g-col-sm-10 grid gap-1">
                            <div id="all_draft_rfqs" class="g-col-2 p-2" t-on-click="setSearchContext" title="All Draft RFQs" filter_name="draft_rfqs">
                                <a href="#" t-attf-class="w-100 h-100 border-0 rounded-0 text-capitalize text-break fw-normal #{purchaseData['all_draft_rfqs'] == 0 ? 'btn btn-secondary' : 'btn btn-info'}">
                                    <div class="fs-2">
                                        <span t-out="purchaseData['all_draft_rfqs']"/> <i class="fa fa-star" style="color: yellow;"></i> <span t-out="purchaseData['all_priority_draft_rfqs']"/>
                                    </div>New
                                </a>
                            </div>
                            <div id="all_sent_rfqs" class="g-col-2 p-2" t-on-click="setSearchContext" title="All Sent RFQs" filter_name="sent_rfqs">
                                <a href="#" class="btn btn-secondary w-100 h-100 border-0 rounded-0 text-capitalize text-break fw-normal">
                                    <div class="fs-2" t-out="purchaseData['all_sent_rfqs']"/>RFQ SENT
                                </a>
                            </div>
                            <div id="all_late_rfqs"  class="g-col-2 p-2" t-on-click="setSearchContext" title="All Late RFQs" filter_name="late_rfqs">
                                <a href="#" t-attf-class="w-100 h-100 border-0 rounded-0 text-capitalize text-break fw-normal #{purchaseData['all_late_rfqs'] == 0 ? 'btn btn-secondary' : 'btn btn-warning'}">
                                    <div class="fs-2" t-out="purchaseData['all_late_rfqs']"/>Late
                                </a>
                            </div>
                            <div id="all_not_acknowledged_orders" class="g-col-2 p-2" t-on-click="setSearchContext" title="All Not Acknowledged Orders" filter_name="not_acknowledged_orders">
                                <a href="#" t-attf-class="w-100 h-100 border-0 rounded-0 text-capitalize text-break fw-normal #{purchaseData['all_not_acknowledged_orders'] == 0 ? 'btn btn-secondary' : 'btn btn-info'}">
                                    <div class="fs-2" t-out="purchaseData['all_not_acknowledged_orders']"/>Orders Not Acknowledged
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="grid gap-4">
                        <div class="g-col-2 g-col-sm-2 d-flex align-items-center py-2 justify-content-end text-end justify-content-lg-start text-lg-start text-break fw-bold">
                            My
                        </div>
                        <div class="g-col-8 g-col-sm-10 grid gap-2">
                            <div id="my_draft_rfqs" class="g-col-2 p-2" t-on-click="setSearchContext" title="My Draft RFQs" filter_name="draft_rfqs,my_purchases">
                                <a href="#" t-attf-class="w-100 h-100 border-0 rounded-0 text-capitalize text-break fw-normal #{purchaseData['my_draft_rfqs'] == 0 ? 'btn btn-secondary' : 'btn btn-info'}">
                                    <div class="w-100 p-2">
                                        <span t-out="purchaseData['my_draft_rfqs']"/> <i class="fa fa-star" style="color: yellow;"></i> <span t-out="purchaseData['my_priority_draft_rfqs']"/>
                                    </div>
                                </a>
                            </div>
                            <div id="my_sent_rfqs" class="g-col-2 p-2" t-on-click="setSearchContext" title="My Sent RFQs" filter_name="sent_rfqs,my_purchases">
                                <a href="#" class="btn btn-secondary w-100 h-100 border-0 rounded-0 text-capitalize text-break fw-normal">
                                    <div class="w-100 p-2" t-out="purchaseData['my_sent_rfqs']"/>
                                </a>
                            </div>
                            <div id="my_late_rfqs" class="g-col-2 p-2" t-on-click="setSearchContext" title="My Late RFQs" filter_name="late_rfqs,my_purchases">
                                <a href="#" t-attf-class="w-100 h-100 border-0 rounded-0 text-capitalize text-break fw-normal #{purchaseData['my_late_rfqs'] == 0 ? 'btn btn-secondary' : 'btn btn-warning'}">
                                    <div class="w-100 p-2" t-out="purchaseData['my_late_rfqs']"/>
                                </a>
                            </div>
                            <div id="my_not_acknowledged_orders" class="g-col-2 p-2" t-on-click="setSearchContext" title="My Not Acknowledged Orders" filter_name="not_acknowledged_orders,my_purchases">
                                <a href="#" t-attf-class="w-100 h-100 border-0 rounded-0 text-capitalize text-break fw-normal #{purchaseData['my_not_acknowledged_orders'] == 0 ? 'btn btn-secondary' : 'btn btn-info'}">
                                    <div class="w-100 p-2" t-out="purchaseData['my_not_acknowledged_orders']"/>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-5 col-xl-5 col-xxl-4 flex-grow-1 flex-lg-grow-0 flex-shrink-0">
                    <div class="row justify-content-end">
                        <div class="g-col-10 g-col-sm-10 grid gap-1">
                            <div id="all_avg_days_to_purchase" class="g-col-4 p-2" title="Computed based on last 3 months">
                                <div t-att-class="'btn w-100 h-100 border-0 rounded-0 text-capitalize text-break fw-normal ' + (purchaseData['all_avg_days_to_purchase'] > purchaseData['default_days_to_purchase'] ? 'btn-danger' : 'btn-secondary')">
                                    <div class="fs-2" t-out="purchaseData['all_avg_days_to_purchase']"></div>Days To Order
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-between">
                        <div class="g-col-10 g-col-sm-10 grid gap-1">
                            <div id="my_avg_days_to_purchase" class="g-col-4 p-2" title="Computed based on last 3 months">
                                <div t-att-class="'btn w-100 h-100 border-0 rounded-0 text-capitalize text-break fw-normal ' + (purchaseData['my_avg_days_to_purchase'] > purchaseData['default_days_to_purchase'] ? 'btn-danger' : 'btn-secondary')">
                                    <div class="w-100 p-2" t-out="purchaseData['my_avg_days_to_purchase']"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
