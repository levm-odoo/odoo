<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.server" id="project_server_action_from_wh">
        <field name="name">From WH</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_open_deliveries()
        </field>
    </record>

    <record model="ir.actions.server" id="project_server_action_to_wh">
        <field name="name">To WH</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_open_receipts()
        </field>
    </record>

    <record model="ir.actions.server" id="project_server_action_all_pickings">
        <field name="name">Stock Moves</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_open_all_pickings()
        </field>
    </record>

    <record id="project_embedded_action_from_wh" model="ir.embedded.actions">
        <field name="parent_res_model">project.project</field>
        <field name="sequence">80</field>
        <field name="parent_action_id" ref="project.act_project_project_2_project_task_all"/>
        <field name="python_method" eval="False"/>
        <field name="action_id" ref="project_stock.project_server_action_from_wh"/>
        <field name="groups_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
    </record>

    <record id="project_embedded_action_to_wh" model="ir.embedded.actions">
        <field name="parent_res_model">project.project</field>
        <field name="sequence">90</field>
        <field name="parent_action_id" ref="project.act_project_project_2_project_task_all"/>
        <field name="python_method" eval="False"/>
        <field name="action_id" ref="project_stock.project_server_action_to_wh"/>
        <field name="groups_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
    </record>

    <record id="project_embedded_action_all_pickings" model="ir.embedded.actions">
        <field name="parent_res_model">project.project</field>
        <field name="sequence">92</field>
        <field name="parent_action_id" ref="project.act_project_project_2_project_task_all"/>
        <field name="python_method" eval="False"/>
        <field name="action_id" ref="project_stock.project_server_action_all_pickings"/>
        <field name="groups_ids" eval="[(4, ref('stock.group_stock_user'))]"/>
    </record>
</odoo>
