<templates xml:space="preserve">

<t t-name="html_builder.OverlayButtons">
    <div t-if="state.isVisible" class="o_overlay_options">
        <t t-foreach="state.buttons" t-as="button" t-key="button_index">
                <button class="btn btn-primary" t-att-class="button.class" t-on-click="button.handler"/>
        </t>
    </div>
</t>
</templates>
