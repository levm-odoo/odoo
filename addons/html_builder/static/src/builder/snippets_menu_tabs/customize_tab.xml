<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.CustomizeTab">
    <t t-if="!props.currentOptionsContainers.length">
        <div class="text-center pt-5">
            Select a block on your page to style it.
        </div>
    </t>
    <t t-else="">
        <t t-foreach="props.currentOptionsContainers" t-as="optionsContainer" t-key="optionsContainer.id">
            <OptionsContainer editingElement="optionsContainer.element" options="optionsContainer.options"/>
        </t>
    </t>
</t>

</templates>
