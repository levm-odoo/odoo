<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.CustomizeTab">
    <t t-if="!props.selectedToolboxes.length">
        <div class="text-center pt-5">
            Select a block on your page to style it.
        </div>
    </t>
    <t t-else="">
        <t t-foreach="props.selectedToolboxes" t-as="selectedToolbox" t-key="selectedToolbox.id">
            <WithSubEnv env="{editingElement: selectedToolbox.element, weContext: {}}">
            <OptionsContainer title="'Section'">
                <t t-foreach="selectedToolbox.toolbox" t-as="toolbox" t-key="toolbox_index">
                    <t t-component="toolbox.ToolboxComponent" />
                </t>
            </OptionsContainer>
            </WithSubEnv>
        </t>
    </t>
</t>

</templates>
