<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.AddProductPriceListBoxed">
    <BuilderRow label.translate="Product">
        <BuilderButtonGroup>
            <BuilderButton
                action="'addItem'"
                actionParam="'.s_pricelist_boxed_item:last-of-type'"
                preview="false"
                className="'o_we_bg_brand_primary'"
                applyTo="applyTo">
                Add Product
            </BuilderButton>
        </BuilderButtonGroup>
    </BuilderRow>
</t>

<t t-name="html_builder.PriceListBoxedOption">
    <t t-call="html_builder.AddProductPriceListBoxed">
        <t t-set="applyTo" t-value="':scope > :has(.s_pricelist_boxed_item):not(:has(.row > div .s_pricelist_boxed_item))'"/>
    </t>
</t>

<t t-name="html_builder.PriceListBoxedSectionOption">
    <t t-call="html_builder.AddProductPriceListBoxed">
        <t t-set="applyTo" t-value="':scope > :has(.s_pricelist_boxed_item)'"/>
    </t>
</t>

<t t-name="html_builder.PriceListBoxedDescriptionOption">
    <BuilderRow label.translate="Descriptions">
        <BuilderCheckbox
            action="'togglePriceListDescription'"
            actionParam="{itemClass:'s_pricelist_boxed_item', descriptionClass: 's_pricelist_boxed_item_description' }"/>
    </BuilderRow>
    <!-- TODO convert snippet_options_border_line_widgets
        <t t-call="website.snippet_options_border_line_widgets">
            <t t-set="label">Separator</t>
            <t t-set="direction" t-value="'top'"/>
            <t t-set="apply_to" t-value="'.s_pricelist_boxed_item_line'"/>
        </t> -->
</t>

</templates>
