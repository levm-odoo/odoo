<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="html_builder.ImageToolOption">
    <WeRow label.translate="Description"
        tooltip.translate="'Alt tag' specifies an alternate text for an image, if the image cannot be displayed (slow connection, missing image, screen reader ...).">
        <WeTextInput
            attributeAction="'alt'"
            placeholder.translate="Alt tag"
            />
    </WeRow>
    <WeRow label.translate="Tooltip"
        tooltip.translate="'Title tag' is shown as a tooltip when you hover the picture.">
        <WeTextInput
            attributeAction="'title'"
            placeholder.translate="Title tag" />
    </WeRow>
    <WeRow label.translate="Transform" preview="false">
        <WeButton title.translate="Crop image" action="'cropImage'" icon="'fa-crop'" id="'cropImage'" />
        <WeButton title.translate="Reset crop" action="'resetCrop'" dependencies="'cropImage'">Reset</WeButton>
        <WeButton title.translate="Transform the picture" action="'transformImage'" icon="'fa-object-ungroup'" id="'transformImage'" />
        <WeButton title.translate="Reset transformation" action="'resetTransformImage'" dependencies="'transformImage'">Reset</WeButton>
    </WeRow>
</t>

</templates>
