<t t-name="html_builder.AddProductPriceListCafe">
    <BuilderRow label.translate="Product">
        <BuilderButtonGroup>
            <BuilderButton
                action="'addItem'"
                actionParam="'.s_pricelist_cafe_item:last-of-type'"
                preview="false"
                className="'o_we_bg_brand_primary'"
                applyTo="applyTo">
                Add Product
            </BuilderButton>
        </BuilderButtonGroup>
    </BuilderRow>
</t>

<t t-name="html_builder.PriceListCafeOption">
    <t t-call="html_builder.AddProductPriceListCafe">
        <t t-set="applyTo" t-value="':scope > :has(.s_pricelist_cafe_item):not(:has(.row > div .s_pricelist_cafe_item))'"/>
    </t>
</t>

<t t-name="html_builder.PriceListCafeRowDivOption">
    <t t-call="html_builder.AddProductPriceListCafe">
        <t t-set="applyTo" t-value="':scope > :has(.s_pricelist_cafe_item)'"/>
    </t>
</t>


<t t-name="html_builder.PriceListCafeDescriptionOption">
    <BuilderRow label.translate="Descriptions">
        <BuilderCheckbox
            action="'togglePriceListDescription'"
            actionParam="{itemClass:'s_pricelist_cafe_item', descriptionClass: 's_pricelist_cafe_item_description' }"/>
    </BuilderRow>
    <!-- TODO convert snippet_options_border_line_widgets
