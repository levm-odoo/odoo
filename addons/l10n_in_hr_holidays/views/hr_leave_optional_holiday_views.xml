<?xml version='1.0' encoding='UTF-8' ?>
<odoo>
    <record id="hr_leave_optional_holiday_view_list" model="ir.ui.view">
        <field name="model">hr.leave.optional.holiday</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="start_date" string="Start Date"/>
                <field name="end_date" string="End Date" readonly="1"/>
            </list>
        </field>
    </record>

    <record id="hr_leave_optional_holiday_view_search" model="ir.ui.view">
        <field name="model">hr.leave.optional.holiday</field>
        <field name="arch" type="xml">
            <search string="Optional Holidays">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <separator />
                <filter name="filter_date" date="start_date" default_period="year" string="Period"/>
            </search>
        </field>
    </record>

    <record id="hr_leave_optional_holiday_action" model="ir.actions.act_window">
        <field name="name">Optional Holidays</field>
        <field name="res_model">hr.leave.optional.holiday</field>
        <field name="view_mode">list</field>
        <field name="search_view_id" ref="hr_leave_optional_holiday_view_search"/>
    </record>

    <menuitem
        id="hr_holidays_optional_holiday_menu_configuration"
        action="hr_leave_optional_holiday_action"
        name="Optional Holidays"
        parent="hr_holidays.menu_hr_holidays_configuration"
        groups="hr_holidays.group_hr_holidays_manager"
        sequence="5"/>
</odoo>
