<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_leave_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.view.form.inherit</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='leave_type_request_unit']" position="after">
                <field name="l10n_in_contains_sandwich_leaves" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='duration_display']" position="after">
                <div name="l10n_in_contains_sandwich_leaves" invisible="not l10n_in_contains_sandwich_leaves" class="w-md-75 float-end ps-3 alert alert-warning" role="alert">
                    The requested time considers the sandwich leave policy.
                </div>
            </xpath>
            <xpath expr="//div[@id='leave_type_day_half_hours']" position="attributes">
                <attribute name="invisible" separator=" or " add="is_limited_to_optional_days"/>
            </xpath>
            <xpath expr="//div[@id='leave_type_day_full']" position="attributes">
                <attribute name="invisible" separator=" or " add="is_limited_to_optional_days"/>
            </xpath>
            <xpath expr="//label[@name='date_label']" position="attributes">
                <attribute name="invisible" separator=" or " add="is_limited_to_optional_days"/>
            </xpath>
            <xpath expr="//label[@name='dates_label']" position="attributes">
                <attribute name="invisible" separator=" or " add="is_limited_to_optional_days"/>
            </xpath>
            <xpath expr="//label[@name='dates_label']" position="after">
                <label for="optional_day_id" invisible="not is_limited_to_optional_days" string="Available Days" />
                <div class="o_row" invisible="not is_limited_to_optional_days or not(request_unit_half or request_unit_hours)">
                    <field name="optional_day_id" invisible="not is_limited_to_optional_days" class="oe_inline" string="Available Days"
                           readonly="state != 'confirm'" options="{'no_create': True}" required="True"/>
                    <field name="request_date_from_period" invisible="not request_unit_half" required="request_unit_half" readonly="state != 'confirm'"/>
                </div>

                <div class="o_row" invisible="not is_limited_to_optional_days or request_unit_half or request_unit_hours">
                    <field name="optional_day_id" invisible="not is_limited_to_optional_days" class="oe_inline" string="Available Days"
                           readonly="state != 'confirm'" options="{'no_create': True}" required="True"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
