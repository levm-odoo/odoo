<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="auth_timeout.CheckIdentityForm">
        <p role="alert" class="alert alert-danger" t-if="state.error" t-esc="state.error"/>
        <div class="text-center border rounded mb-3 p-3">
            <img t-attf-src="/web/image/res.users/{{user.userId}}/avatar_128" class="o_avatar rounded me-1"/>
            Signed in as <strong t-out="user.login"/>
        </div>
        <div class="border rounded mb-3 p-3 bg-light">
            <form id="password" t-if="state.authMethod === 'password'" t-on-submit.prevent="onSubmit">
                <input type="hidden" name="type" value="password"/>
                <input type="password" name="password" class="form-control" placeholder="Password"/>
                <div class="text-end mb-3">
                    <a href="/password_reset">Forgot password?</a>
                </div>
                <div class="text-center d-grid">
                    <button type="submit" class="btn btn-primary">Confirm</button>
                </div>
            </form>
            <form id="totp" t-if="state.authMethod === 'totp'" t-on-submit.prevent="onSubmit">
                <input type="hidden" name="type" value="totp"/>
                <div class="text-center">
                    <i class="fa fa-3x fa-mobile" aria-hidden="true"/>
                    <h3>Authentication code</h3>
                </div>
                <input type="code" name="code" class="form-control" placeholder="XXXXXX"/>
                <div class="text-center gap-1 d-grid mb-1 pt-3">
                    <button type="submit" class="btn btn-primary">Verify</button>
                </div>
                <div>
                    Open your two-factor authenticator (TOTP) app or browser extension to view your authentication code.
                </div>
            </form>
            <form id="totp_mail" t-if="state.authMethod === 'totp_mail'" t-on-submit.prevent="onSubmit">
                <input type="hidden" name="type" value="totp"/>
                <div class="text-center">
                    <i class="fa fa-3x fa-envelope" aria-hidden="true"/>
                    <h3>Authentication code via email</h3>
                </div>
                <div>
                    Enter below the six-digit authentication code just sent to your email
                </div>
                <input type="code" name="code" class="form-control" placeholder="XXXXXX"/>
                <div class="text-center gap-1 d-grid mb-1 pt-3">
                    <button type="submit" class="btn btn-primary">Verify</button>
                </div>
            </form>
            <form id="passkey" t-if="state.authMethod === 'webauthn'" t-on-submit.prevent="onSubmit">
                <input type="hidden" name="type" value="webauthn"/>
                <input type="hidden" name="webauthn_response"/>
                <div class="text-center">
                    <i class="fa fa-3x fa-shield" aria-hidden="true"/>
                    <h3>Passkey</h3>
                </div>
                <div>
                    When you are ready, authenticate using the button below.
                </div>
                <div class="text-center gap-1 d-grid mb-1 pt-3">
                    <button type="submit" class="btn btn-primary">Use passkey</button>
                </div>
            </form>
        </div>
        <div t-if="user.authMethods.length > 1" class="border rounded mb-3 p-3">
            <h6>Having problems ?</h6>
            <ul>
                <li t-if="user.authMethods.indexOf('webauthn') !== -1 &amp;&amp; state.authMethod !== 'webauthn'">
                    <a href="#" t-on-click="onChangeAuthMethod" data-auth-method="webauthn">Use your passkey</a>
                </li>
                <li t-if="user.authMethods.indexOf('totp') !== -1 &amp;&amp; state.authMethod !== 'totp'">
                    <a href="#" t-on-click="onChangeAuthMethod" data-auth-method="totp">Use your authenticator app</a>
                </li>
                <li t-if="user.authMethods.indexOf('totp_mail') !== -1 &amp;&amp; state.authMethod !== 'totp_mail'">
                    <a href="#" t-on-click="onChangeAuthMethod" data-auth-method="totp_mail">Use an authentication code sent by email</a>
                </li>
                <li t-if="state.authMethod !== 'password'">
                    <a href="#" t-on-click="onChangeAuthMethod" data-auth-method="password">Use your password</a>
                </li>
            </ul>
        </div>
    </t>
    <t t-name="auth_timeout.CheckIdentityDialog">
        <Dialog title.translate="Confirm access" size="'md'" contentClass="'o_error_dialog'" footer="false">
            <CheckIdentityForm t-props="formProps"/>
        </Dialog>
    </t>

</templates>
