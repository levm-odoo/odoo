<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Only load the SDK on pages with the payment form. -->
    <template id="payment_mercado_pago.form" inherit_id="payment.form">
        <xpath expr="." position="inside">
            <script src="https://sdk.mercadopago.com/js/v2"/>
        </xpath>
    </template>

    <template id="payment_mercado_pago.method_form" inherit_id="payment.method_form">
        <xpath expr="//input[@name='o_payment_radio']" position="attributes">
            <attribute name="t-att-data-mercado-pago-inline-form-values">
                provider_sudo._mercado_pago_get_inline_form_values(partner_id, amount, currency,pm_sudo)
            </attribute>
        </xpath>
    </template>

</odoo>
