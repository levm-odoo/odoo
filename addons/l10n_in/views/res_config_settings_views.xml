<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_l10n_in" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.l10n_in</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="invoicing_settings" position="inside">
                <setting help="Use this if setup with Reseller(E-Commerce)." name="ecommerce_reseller_setting" title="Manage Reseller(E-Commerce)" invisible="country_code != 'IN'">
                    <field name="group_l10n_in_reseller"/>
                </setting>
            </block>
            <xpath expr="//setting[@id='eu_service']" position="attributes">
                <attribute name="invisible">country_code == 'IN'</attribute>
            </xpath>
            <xpath expr="//setting[@id='tax_exigibility']" position="attributes">
                <attribute name="invisible">country_code == 'IN'</attribute>
            </xpath>
            <xpath expr="//setting[@id='vies_service_setting']" position="attributes">
                <attribute name="invisible">country_code == 'IN'</attribute>
            </xpath>
            <xpath expr="//setting[@id='collect_customer_payment']" position="attributes">
                <attribute name="invisible">country_code == 'IN'</attribute>
            </xpath>
            <xpath expr="//setting[@id='sepa_payments']" position="attributes">
                <attribute name="invisible">country_code == 'IN'</attribute>
            </xpath>
            <xpath expr="//setting[@id='intrastat_statistics']" position="attributes">
                <attribute name="invisible">country_code == 'IN'</attribute>
            </xpath>
            <xpath expr="//block[@name='default_taxes_setting_container']" position="inside">
                <setting name="l10n_in_tds_tcs"
                         help="Tax Deducted at Source / Tax Collected at Source."
                         string="TDS &amp; TCS"
                         invisible="country_code != 'IN'">
                    <field name="module_l10n_in_withholding"/>
                    <div invisible="not module_l10n_in_withholding">
                        <div class="row">
                            <label string="TAN" for="l10n_in_tan" class="col-2 o_light_label"/>
                            <field name="l10n_in_tan"/>
                        </div>
                    </div>
                </setting>
            </xpath>
            <xpath expr="//block[@name='fiscal_localization_setting_container']" position="after">
                <block title="Indian Localization" invisible="country_code != 'IN'">
                    <setting string="Register Under GST">
                        <field name="l10n_in_is_gst_registered"/>
                        <div invisible="not l10n_in_is_gst_registered">
                            <div class="row">
                                <label string="GSTIN" for="l10n_in_gstin" class="col-lg-4 o_light_label"/>
                                <field name="l10n_in_gstin" required="1"/>
                            </div>
                        </div>
                    </setting>
                    <t invisible="not l10n_in_is_gst_registered">
                        <setting name="india_production_setting"
                                 string="Production Environment"
                                 help="Activate this to start using Indian services in the production environment.">
                            <field name="l10n_in_edi_production_env"/>
                            <div invisible="not l10n_in_edi_production_env or (not module_l10n_in_edi and not module_l10n_in_gstin_status and not module_l10n_in_edi_ewaybill and not module_l10n_in_reports_gstr)">
                                <button name="l10n_in_edi_buy_iap"
                                        title="Costs 1 credit per transaction. Free 200 credits will be available for the first time."
                                        icon="fa-arrow-right"
                                        type="object"
                                        string="Buy credits"
                                        class="btn-link"/>
                            </div>
                        </setting>
                        <setting name="electronic_invoices_in"
                                 string="Send E-Invoice"
                                 help="Send invoices to NIC (National Informatics Center) when posting."
                                 documentation="/applications/finance/fiscal_localizations/india.html#india-e-invoicing"
                                 company_dependent="1">
                            <field name="module_l10n_in_edi"/>
                            <div class="content-group" invisible="not module_l10n_in_edi">
                                <div class="text-warning mt16 mb4">
                                    Save this page and come back here to set up the feature.
                                </div>
                            </div>
                        </setting>
                        <setting name="electronic_waybill_in"
                                 string="Send E-WayBill"
                                 help="Send e-waybills to NIC (National Informatics Center) when posting."
                                 documentation="/applications/finance/fiscal_localizations/india.html#indian-e-waybill"
                                 company_dependent="1">
                            <field name="module_l10n_in_edi_ewaybill"/>
                            <div class="content-group" invisible="not module_l10n_in_edi_ewaybill">
                                <div class="text-warning mt16 mb4">
                                    Save this page and come back here to set up the feature.
                                </div>
                            </div>
                        </setting>
                        <setting name="india_gst"
                                 string="GST E-Filing"
                                 help="Connect to GST portal to submit GSTR-1 and get GSTR-2B"
                                 company_dependent="1">
                            <field name="module_l10n_in_reports_gstr" widget="upgrade_boolean"/>
                            <div class="content-group" invisible="not module_l10n_in_reports_gstr">
                                <div class="text-warning mt16 mb4">
                                    Save this page and come back here to set up the feature.
                                </div>
                            </div>
                        </setting>
                        <setting name="india_gstin_status_api_settings"
                                 string="Check GSTIN Status"
                                 help="Connect to GST portal and get latest status of GSTIN.">
                            <field name="module_l10n_in_gstin_status"/>
                        </setting>
                        <setting string="HSN/SAC Validation"
                                 help="HSN/SAC Digit Validation for GST Compliance based on your Aggregate Annual Turnover (AATO).">
                            <field name="l10n_in_hsn_code_digit"/>
                        </setting>
                    </t>
                </block>
            </xpath>
            <block id="print_vendor_checks_setting_container" position="inside">
                <setting id="vendor_payment_order_file" company_dependent="1"
                    help="Generate Vendor Payment Order file(csv file), upload to your bank to make the payments" invisible="country_code != 'IN'">
                    <field name="module_l10n_in_enet_batch_payment" widget="upgrade_boolean"/>
                </setting>
            </block>
        </field>
    </record>
</odoo>
