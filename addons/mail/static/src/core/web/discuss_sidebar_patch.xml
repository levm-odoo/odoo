<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.DiscussSidebar" t-inherit-mode="extension">
        <xpath expr="//*[@name='startMeeting']" position="after">
            <button class="align-items-center btn btn-primary btn-sm d-flex gap-1 mx-5 rounded" t-on-click="store.startMeeting" data-hotkey="m">
                <i class="fa fa-fw fa-users opacity-75"/>
                <span t-esc="startMeetingText"/>
            </button>
        </xpath>
    </t>
</templates>
