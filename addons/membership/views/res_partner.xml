<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_pricelist_members" model="ir.actions.act_window">
        <!-- <field name="name">Members</field> -->
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,kanban,form,activity</field>
        <field name="domain">[('specific_property_product_pricelist', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p>
            <p>
                Add this pricelist to a partner.
            </p>
        </field>
    </record>
    <record id="view_partner_pricelist_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <sheet position="inside">
                <div name="button_box" class="oe_button_box">
                    <button type="action" name="membership.action_pricelist_members" class="oe_stat_button" icon="fa-users">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Partners</span>
                        </div>
                    </button>
                </div>
            </sheet>
        </field>
    </record>
    <record id="action_grade_members" model="ir.actions.act_window">
        <!-- <field name="name">Members</field> -->
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,kanban,form,activity</field>
        <field name="domain">[('grade_id', '=', active_id)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No data yet!
            </p>
            <p>
                Add this grade to a partner.
            </p>
        </field>
    </record>
    <record id="view_partner_grade_form" model="ir.ui.view">
        <field name="name">res.partner.grade.form</field>
        <field name="model">res.partner.grade</field>
        <field name="arch" type="xml">
            <form string="Partner Level">
                <sheet string="Level">
                    <div class="oe_button_box" name="button_box">
                        <button type="action" name="membership.action_grade_members" class="oe_stat_button" icon="fa-users">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Partners</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Gold Partner" required="True"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>