<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="hr_holidays.TimeOffCalendarCommonPopover.popover" t-inherit="web.CalendarCommonPopover.popover" t-inherit_mode="primary" owl="1">
        <xpath expr="//span" position="attributes">
            <attribute name="t-attf-class">flex-grow-1</attribute>
        </xpath>
        <xpath expr="//span[hasclass('o_cw_popover_close')]" position="attributes">
            <attribute name="class">o_cw_popover_close ms-0 mt-2 me-2</attribute>
            <attribute name="data-hotkey">x</attribute>
        </xpath>
    </t>

    <t t-name="hr_holidays.TimeOffCalendarCommonPopover.footer" t-inherit="web.CalendarCommonPopover.footer" t-inherit-mode="primary" owl="1">
        <xpath expr="//t" position="inside">
            <button t-if="!isEventEditable" class="btn btn-primary" t-on-click="onEditEvent" data-hotkey="v">
                View
            </button>
            <button t-if="canBeApproved" class="btn btn-primary" t-on-click="onClickApproveEvent" data-hotkey="g">
                Approve
            </button>
            <button class="btn btn-primary" t-if="canBeValidated" t-on-click="onClickValidateEvent" data-hotkey="g">
                Validate
            </button>
            <button class="btn btn-secondary" t-if="canBeRefused" t-on-click="onClickRefuseEvent" data-hotkey="z">
                Refuse
            </button>
        </xpath>
    </t>
</templates>
