<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="resource_mail.AvatarResource">
        <div class="o-mail-Avatar o_avatar d-flex align-items-center">
            <img class="rounded me-1"
                t-attf-src="/web/image/{{props.resModel}}/{{props.resId}}/avatar_128"
                t-on-click.stop.prevent="(ev) => this.openPopover(ev.currentTarget)"
            />
        </div>
    </t>

    <t t-name="resource_mail.Many2OneAvatarResourceField">
        <Many2One t-props="many2oneProps">
            <t t-set-slot="decoration">
                <t t-if="controller.value !== false">
                    <t t-if="resourceType === 'material'">
                        <span class="o_avatar o_m2o_avatar">
                            <span class="d-inline-flex align-items-center justify-content-center rounded o_material_resource cursor-default me-1" t-att-title="controller.value[1]">
                                <i class="fa fa-wrench"/>
                            </span>
                        </span>
                    </t>
                    <t t-elif="resourceType === 'user'">
                        <AvatarResource resModel="controller.relation" resId="controller.value[0]"/>
                    </t>
                </t>
            </t>
        </Many2One>
    </t>

</templates>
