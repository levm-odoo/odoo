        <record id="product_product_form_view_inherit_product_hs_code" model="ir.ui.view">
            <field name="name">product.product.form.inherit.product.hs.code</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//group[@name='customs']" position="inside">
                    <field name="hs_code_id" options="{'no_open': True, 'no_create': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
