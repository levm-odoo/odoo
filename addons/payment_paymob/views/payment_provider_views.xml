<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">PayPal Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group invisible="code != 'paymob'">
                    <field
                        name="paymob_public_key"
                        string="Public Key"
                        required="code == 'paymob' and state != 'disabled'"
                    />
                    <field
                        name="paymob_secret_key"
                        string="Secret Key"
                        password="True"
                        required="code == 'paymob' and state != 'disabled'"
                    />
                    <field
                        name="paymob_hmac_key"
                        string="HMAC Key"
                        password="True"
                        required="code == 'paymob' and state != 'disabled'"
                    />
                    <field name="paymob_account_country_id" invisible="code != 'paymob'"/>
                    <div colspan="2" class="alert alert-warning" invisible="code != 'paymob'">
                        Currency will be updated to match the country of the paymob account.
                    </div>
                </group>
            </group>
            <group name="payment_form" position='inside'>
            <div colspan="2">
                <field
                    class="alert alert-warning"
                    name="paymob_integration_message"
                    invisible="code != 'paymob'"
                />
            </div>
            </group>
        </field>
    </record>

</odoo>