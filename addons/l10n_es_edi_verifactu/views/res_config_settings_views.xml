<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n.es</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']/block" position="after">
                <block title="Veri*Factu" name="l10n_es_edi_verifactu" invisible="country_code != 'ES'">
                    <!-- Invisible fields -->
                    <field name="l10n_es_edi_verifactu_certificate_ids" invisible="1"/>
                    <setting string="Connection" company_dependent="1">
                        <div class="content-group">
                            <div class="mt16">
                                <div class="o_row">
                                    <label for="l10n_es_edi_verifactu_test_environment" class="o_light_label"/>
                                    <field name="l10n_es_edi_verifactu_test_environment"/>
                                </div>
                                <div class="text-muted" invisible="not l10n_es_edi_verifactu_test_environment">
                                    Test mode: EDI data is sent to separate test servers and is not considered official.
                                </div>
                                <div class="text-muted" invisible="l10n_es_edi_verifactu_test_environment">
                                    Production mode: EDI data is sent to the official agency servers.
                                </div>
                                <br/>
                                <div>
                                    <button name="%(l10n_es_edi_verifactu_certificate_action)d" type="action" class="oe_link">Manage certificates</button>
                                </div>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>

        </field>
    </record>
</odoo>
