<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ecpay_invoice_view_form" model="ir.ui.view">
            <field name="name">ecpay_invoice_view_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                    <button
                        name="l10n_tw_edi_issue_allowance"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-trash-o"
                        string="Issue allowance for E-invoice"
                        invisible="l10n_tw_edi_refund_invoice_number or move_type not in ['in_refund', 'out_refund']"
                    />
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Ecpay" invisible="country_code != 'TW'">
                        <group string="ECpay E-invoice Information" invisible="move_type in ['in_refund', 'out_refund']">
                            <group>
                                <field name="l10n_tw_edi_state"/>
                                <field name="l10n_tw_edi_ecpay_invoice_id"/>
                                <field name="l10n_tw_edi_invoice_create_date"/>
                            </group>
                            <group>
                                <field name="l10n_tw_edi_love_code"/>
                                <field name="l10n_tw_edi_is_print"/>
                                <field name="l10n_tw_edi_carrier_type"/>
                                <field name="l10n_tw_edi_carrier_number" invisible="l10n_tw_edi_carrier_type not in ['2', '3']" />
                                <field name="l10n_tw_edi_clearance_mark" />
                            </group>
                        </group>
                        <group string="ECpay E-invoice Refund" invisible="move_type not in ['in_refund', 'out_refund']">
                            <group>
                                <field name="l10n_tw_edi_ecpay_invoice_id"/>
                                <field name="l10n_tw_edi_origin_invoice_number_id"/>
                                <field name="l10n_tw_edi_refund_invoice_number"/>
                                <field name="l10n_tw_edi_refund_state"/>
                                <field name="l10n_tw_edi_refund_agreement_type"/>
                            </group>
                            <group/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
