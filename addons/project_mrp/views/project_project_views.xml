<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.server" id="project_server_action_bills_of_materials">
        <field name="name">Bills of Materials</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_view_mrp_bom()
        </field>
    </record>

    <record model="ir.actions.server" id="project_server_action_manufacturing_orders">
        <field name="name">Manufacturing Orders</field>
        <field name="model_id" ref="project.model_project_project"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_view_mrp_production()
        </field>
    </record>

    <record id="project_embedded_action_bills_of_materials" model="ir.embedded.actions">
        <field name="parent_res_model">project.project</field>
        <field name="sequence">95</field>
        <field name="parent_action_id" ref="project.act_project_project_2_project_task_all"/>
        <field name="python_method" eval="False"/>
        <field name="action_id" ref="project_mrp.project_server_action_bills_of_materials"/>
        <field name="context">{"from_embedded_action": true}</field>
        <field name="groups_ids" eval="[(4, ref('mrp.group_mrp_user'))]"/>
    </record>

    <record id="project_embedded_action_manufacturing_orders" model="ir.embedded.actions">
        <field name="parent_res_model">project.project</field>
        <field name="sequence">100</field>
        <field name="parent_action_id" ref="project.act_project_project_2_project_task_all"/>
        <field name="python_method" eval="False"/>
        <field name="action_id" ref="project_mrp.project_server_action_manufacturing_orders"/>
        <field name="context">{"from_embedded_action": true}</field>
        <field name="groups_ids" eval="[(4, ref('mrp.group_mrp_user'))]"/>
    </record>
</odoo>
