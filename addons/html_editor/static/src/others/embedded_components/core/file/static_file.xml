<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!-- /file template -->
    <t t-name="html_editor.staticFileBanner">
        <span class="d-flex flex-grow-1 align-items-center alert alert-info">
            <!-- mimetype image -->
            <span class="o_file_image d-flex o_image user-select-none"
                t-att-title="fileModel.filename" t-att-data-mimetype="fileModel.mimetype"/>
            <!-- file name -->
            <span class="o_embedded_file_name_container m-1">
                <a class="o_link_readonly" t-att-href="fileModel.downloadUrl"
                    t-out="fileModel.filename"
                    contenteditable="true"/>
            </span>
        </span>
    </t>
</templates>
